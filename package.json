{
  "name": "@0xforkitall/ui-kit",
  "description": "Design system and UI components for React or NextJs projects",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run --stream build",
    "lint": "lerna run --no-bail --stream lint",
    "prettify": "lerna run --no-bail --stream prettify",
    "type-check": "lerna run --no-bail --stream type-check",
    "changelog": "yarn changeset status --since origin/main",
    "changelog:add": "yarn changeset",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@0xforkitall/shared-config": "^1.2.0",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": "^18.12.0",
    "npm": "please-use-yarn"
  }
}
